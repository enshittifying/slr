# Google API Configuration
GOOGLE_SHEETS_ID=your_master_sheet_id_here
GOOGLE_CALENDAR_ID=your_calendar_id_here
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Service Account (for backend automation)
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service_account.json

# LLM API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Access (if using external legal databases)
WESTLAW_API_KEY=your_westlaw_key_here
LEXIS_API_KEY=your_lexis_key_here
JSTOR_API_KEY=your_jstor_key_here

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_TASKS=5

# Pipeline Configuration
SP_MACHINE_OUTPUT_DIR=./sp_machine/output
R1_MACHINE_OUTPUT_DIR=./r1_machine/output
R2_MACHINE_OUTPUT_DIR=./r2_machine/output

# Security
ALLOWED_DOMAIN=stanford.edu
SESSION_SECRET=your_secret_key_here

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
LLM_RATE_LIMIT_PER_MINUTE=20
