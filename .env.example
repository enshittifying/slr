# Flask Configuration
FLASK_APP=api/index.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/slr_db
# For Vercel Postgres, use:
# POSTGRES_URL=postgres://default:xxx@xxx.vercel-storage.com:5432/verceldb

# Google API Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback
GOOGLE_SHEETS_ID=your_master_sheet_id_here
GOOGLE_CALENDAR_ID=your_calendar_id_here
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Service Account (for backend automation)
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service_account.json
# Or as JSON string for Vercel:
# GOOGLE_SERVICE_ACCOUNT_JSON={"type": "service_account", ...}

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Database Access (if using external legal databases)
WESTLAW_API_KEY=your_westlaw_key_here
LEXIS_API_KEY=your_lexis_key_here
JSTOR_API_KEY=your_jstor_key_here

# Application Configuration
ALLOWED_DOMAIN=stanford.edu
MAX_CONCURRENT_TASKS=5
LOG_LEVEL=INFO

# Pipeline Configuration
SP_MACHINE_OUTPUT_DIR=./sp_machine/output
R1_MACHINE_OUTPUT_DIR=./r1_machine/output
R2_MACHINE_OUTPUT_DIR=./r2_machine/output

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
LLM_RATE_LIMIT_PER_MINUTE=20

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600
