{
  "title": "Bluebook Capitalization Rules (Rule 8) - Structured Patterns",
  "version": "1.0",
  "rules": {
    "rule_8": {
      "title": "Capitalization",
      "full_text": "Capitalize references to specific constitutional amendments (\"First Amendment\"), specific acts or laws (\"Civil Rights Act\"), titles of court documents (when referring to a specific document, e.g., \"Plaintiff's Motion\"), and titles of periodicals in citations (per Bluebook rules). Do not capitalize generic references (\"the amendment\" or \"the act\") or terms like \"federal\" or \"state\" unless part of an official name. Additionally, follow specific capitalization rules for judges' titles (rule 9) and court names (\"Supreme Court\" when referring to SCOTUS, etc.).",
      "patterns": [
        {
          "element": "Constitutional Amendments",
          "specific": "First Amendment, Fourth Amendment, Fourteenth Amendment",
          "generic": "the amendment",
          "rule": "CAPITALIZE specific amendments; lowercase generic references"
        },
        {
          "element": "Acts and Laws",
          "specific": "Civil Rights Act, Social Security Act, Americans with Disabilities Act",
          "generic": "the act, the law, the statute",
          "rule": "CAPITALIZE official names; lowercase generic references"
        },
        {
          "element": "Court Documents",
          "specific": "Plaintiff's Motion, Brief for Petitioner, Motion for Summary Judgment",
          "generic": "the motion, the brief, the document",
          "rule": "CAPITALIZE when referring to specific document; lowercase when generic"
        },
        {
          "element": "Periodical Titles",
          "specific": "Harvard Law Review, Yale Journal of Law and Technology",
          "generic": "a law review, the journal",
          "rule": "CAPITALIZE periodical names in citations; follow title case rules"
        }
      ]
    },
    "rule_9": {
      "title": "Titles of Judges, Officials, and Terms of Court",
      "full_text": "Capitalize the titles of judges and officials when used before a name (\"Chief Justice Marshall\") or when referring to a specific person (\"the President\"). Do not capitalize when used generically (\"any justice may...\"). Terms of court (like \"Fall Term\") are capitalized when naming a specific term of a specific court. Always capitalize \"Court\" when naming the U.S. Supreme Court or when the reference is to the court in a case name in text (\"the Court held...\"). Otherwise, lowercase \"court\".",
      "judge_and_official_titles": [
        {
          "pattern": "Before Name",
          "rule": "CAPITALIZE",
          "examples": [
            "Chief Justice Marshall",
            "Justice Roberts",
            "Judge Smith",
            "The President",
            "Senator Johnson"
          ]
        },
        {
          "pattern": "Generic Use",
          "rule": "lowercase",
          "examples": [
            "any justice may",
            "the chief justice held",
            "a judge in that court",
            "when the president acts"
          ]
        }
      ],
      "court_names": [
        {
          "court_type": "U.S. Supreme Court",
          "rule": "ALWAYS CAPITALIZE 'Court'",
          "examples": [
            "The Supreme Court held",
            "the Court's decision",
            "The Court reasoned"
          ]
        },
        {
          "court_type": "Other Courts",
          "rule": "lowercase 'court'",
          "examples": [
            "the lower courts",
            "the appellate court ruled",
            "district court proceedings",
            "when the court decides"
          ]
        },
        {
          "court_type": "Court Abbreviations",
          "rule": "Use standard abbreviations in citations",
          "examples": [
            "Cal. Ct. App.",
            "5th Cir.",
            "N.Y. (for New York Court of Appeals)"
          ]
        }
      ],
      "terms_of_court": [
        {
          "pattern": "Specific Term Naming",
          "rule": "CAPITALIZE",
          "examples": [
            "Fall Term",
            "Spring Term 2024",
            "The October Term"
          ]
        },
        {
          "pattern": "Generic References",
          "rule": "lowercase",
          "examples": [
            "the next term",
            "during the court's term"
          ]
        }
      ]
    },
